<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wholeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/middle_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttons_layout"
        android:layout_marginRight="32dp"
        android:background="#000000"
        android:fontFamily="sans-serif-light"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="80sp" />

    <TextView
        android:id="@+id/result_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttons_layout"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="5dp"
        android:textSize="70sp"
        android:background="#000000"
        android:fontFamily="sans-serif-light"
        android:text="0"
        android:maxLines="1"
        android:ellipsize="start"
        android:gravity="end"
        android:textColor="@color/white"
        app:autoSizeMinTextSize="10dp"
        app:autoSizeMaxTextSize="80dp"
        app:autoSizeStepGranularity="5dp"
        app:autoSizeTextType="uniform"/>

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:orientation="vertical"
        android:paddingBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_ac"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#a5a5a5"
                android:fontFamily="sans-serif"
                android:text="AC"
                android:textColor="#000000"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="33sp"
                app:cornerRadius="45dp"
                app:iconPadding="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_plusminus"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#a5a5a5"
                android:fontFamily="sans-serif"
                android:text="±"
                android:textColor="#000000"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="35sp"
                app:cornerRadius="45dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_percent"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#a5a5a5"
                android:fontFamily="sans-serif"
                android:text="%"
                android:textColor="#000000"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="35sp"
                app:cornerRadius="45dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_devide"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#f2a33b"
                android:fontFamily="sans-serif"
                android:text="÷"
                android:textColor="#ffffff"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="40sp"
                app:cornerRadius="45dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_7"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#333333"
                android:fontFamily="sans-serif"
                android:text="7"
                android:textColor="#ffffff"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="35sp"
                app:cornerRadius="45dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_8"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#333333"
                android:fontFamily="sans-serif"
                android:text="8"
                android:textColor="#ffffff"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="35sp"
                app:cornerRadius="45dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_9"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#333333"
                android:fontFamily="sans-serif"
                android:text="9"
                android:textColor="#ffffff"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="35sp"
                app:cornerRadius="45dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_multiply"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#f2a33b"
                android:fontFamily="sans-serif"
                android:text="×"
                android:textColor="#ffffff"
                android:textSize="40sp"
                app:cornerRadius="45dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_4"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#333333"
                android:fontFamily="sans-serif"
                android:text="4"
                android:textColor="#ffffff"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="35sp"
                app:cornerRadius="45dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_5"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#333333"
                android:fontFamily="sans-serif"
                android:text="5"
                android:textColor="#ffffff"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="35sp"
                app:cornerRadius="45dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_6"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#333333"
                android:fontFamily="sans-serif"
                android:text="6"
                android:textColor="#ffffff"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="35sp"
                app:cornerRadius="45dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_minus"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#f2a33b"
                android:fontFamily="sans-serif"
                android:text="−"
                android:textColor="#ffffff"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="40sp"
                app:cornerRadius="45dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_1"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#333333"
                android:fontFamily="sans-serif"
                android:text="1"
                android:textColor="#ffffff"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="35sp"
                app:cornerRadius="45dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_2"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#333333"
                android:fontFamily="sans-serif"
                android:text="2"
                android:textColor="#ffffff"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="35sp"
                app:cornerRadius="45dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_3"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#333333"
                android:fontFamily="sans-serif"
                android:text="3"
                android:textColor="#ffffff"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="35sp"
                app:cornerRadius="45dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_plus"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#f2a33b"
                android:fontFamily="sans-serif"
                android:text="+"
                android:textColor="#ffffff"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="40sp"
                app:cornerRadius="45dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_0"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#333333"
                android:fontFamily="sans-serif"
                android:gravity="left"
                android:paddingStart="35dp"
                android:paddingTop="23dp"
                android:text="0"
                android:textColor="#ffffff"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="35sp"
                app:cornerRadius="45dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_point"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#333333"
                android:fontFamily="sans-serif"
                android:text="."
                android:textColor="#ffffff"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="40sp"
                app:cornerRadius="45dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_equals"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#f2a33b"
                android:fontFamily="sans-serif"
                android:text="="
                android:textColor="#ffffff"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="40sp"
                app:cornerRadius="45dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>